rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: Users can read and write their own profile
    // Users: Users can create their own profile, and read/update/delete it
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Mechanics: Authenticated users can read. 
    // Only the owner (linked by userId) should typically write, but for now allow auth users to create.
    match /mechanics/{mechanicId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Requests: Users can read/write their own requests
    match /requests/{requestId} {
      allow create: if request.auth != null;
      // Temporary: Allow all authenticated users to read/update requests to enable 
      // migration of existing data (backfilling mechanicUserId).
      // TODO: Tighten this back to ownership checks after migration.
      allow read, update: if request.auth != null;
    }

    // Chats: Allow authenticated users to read/write for now
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
