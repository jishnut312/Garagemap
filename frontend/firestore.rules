rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Mechanics: Authenticated users can read. 
    // Only the owner (linked by userId) should typically write, but for now allow auth users to create.
    match /mechanics/{mechanicId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Requests: Users can read/write their own requests
    match /requests/{requestId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.mechanicId == request.auth.uid // Assuming mechanicId is user ID or linked
      );
    }
  }
}
